<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="?android:selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_id_document_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="18dp"
            android:text="100001"
            android:gravity="center"
            android:background="@drawable/item_id_bg"
            android:textColor="@color/white"
            android:paddingHorizontal="6dp"
            android:textSize="12dp"/>
        <TextView
            android:id="@+id/tv_title_document_item"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="title"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/black85"
            android:textSize="15dp"
            android:layout_marginStart="8dp"/>
        <TextView
            android:id="@+id/tv_html_document_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HTML"
            android:textSize="12sp"
            android:layout_marginStart="4dp"
            android:textColor="@color/white"
            android:paddingHorizontal="6dp"
            android:background="@drawable/item_id_bg"/><!--
        <TextView
            android:id="@+id/tv_json_document_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JSON"
            android:textSize="12sp"
            android:layout_marginStart="4dp"
            android:textColor="@color/white"
            android:paddingHorizontal="6dp"
            android:background="@drawable/item_json_bg"/>-->
        <ImageView
            android:id="@+id/iv_password_document_item"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:padding="2dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_password"
            app:tint="?attr/colorPrimary"/>
        <ImageView
            android:id="@+id/iv_hide_document_item"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_privately_shared"
            app:tint="?attr/colorPrimary" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_desc_document_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="desp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="13dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingVertical="5dp"
        android:textColor="@color/black45"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_create_course"
                app:tint="@color/black35" />
            <TextView
                android:id="@+id/tv_create_document_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020-05-20 10:00:00"
                android:layout_marginStart="4dp"
                android:textColor="@color/black35"
                android:textSize="10sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginStart="24dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_clock"
                app:tint="@color/black35" />
            <TextView
                android:id="@+id/tv_update_document_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020-05-20 10:00:00"
                android:layout_marginStart="4dp"
                android:textColor="@color/black35"
                android:textSize="10sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|end"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_modify"
                app:tint="@color/black35" />
            <TextView
                android:id="@+id/tv_modify_document_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="@color/black35"
                android:layout_marginStart="4dp"
                android:textSize="10sp"/>
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_eye"
                app:tint="@color/black35" />
            <TextView
                android:id="@+id/tv_read_document_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="@color/black35"
                android:layout_marginStart="4dp"
                android:textSize="10sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>