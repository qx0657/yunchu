<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/iv_avatar_userinfo"
                            android:layout_width="56dp"
                            android:layout_height="50dp"
                            android:src="@drawable/icon"
                            app:layout_constraintCircleRadius="999dp"
                            android:layout_marginStart="5dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="10dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@id/iv_avatar_userinfo">

                            <TextView
                                android:id="@+id/tv_username_userinfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="云储文档"
                                android:textColor="@color/black85"
                                android:textSize="16sp"/>
                            <TextView
                                android:id="@+id/tv_email_userinfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="简便高效的服务端在线文档托管"
                                android:textColor="@color/black65"
                                android:textSize="13sp"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/tv_grade_userinfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0级"
                            android:textColor="@color/black85"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginEnd="10dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <com.hjq.widget.layout.SettingBar
                        android:id="@+id/sb_mobile_uia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        app:bar_leftIcon="@drawable/ic_tel"
                        app:bar_leftText="手机号"/>
                    <com.hjq.widget.layout.SettingBar
                        android:id="@+id/sb_qq_uia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        app:bar_leftIcon="@drawable/ic_qq"
                        app:bar_leftText="QQ号"/>
                    <com.hjq.widget.layout.SettingBar
                        android:id="@+id/sb_res_pwd_uia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ripper_bg_select_smoke"
                        app:bar_leftIcon="@drawable/ic_reset_pwd"
                        app:bar_leftText="修改密码"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_invite_code_userinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="@drawable/ripper_bg_select"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:background="@drawable/invitation_background"
                            android:orientation="vertical"
                            android:padding="20dp">
                            <TextView
                                android:id="@+id/tv_appid_uia"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="邀请码"
                                android:textSize="18sp"
                                android:textColor="@color/white"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="@color/white70"
                                android:text="我的专属邀请码"
                                android:layout_marginTop="5dp"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_copy"
                            android:layout_marginTop="18dp"
                            android:layout_marginEnd="10dp"
                            android:layout_alignParentEnd="true"
                            app:tint="@color/white" />
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="12dp"
                        android:layout_marginHorizontal="14dp"
                        android:text="云储已开启邀请注册机制！赶快来分享你的专属邀请码给朋友注册吧~"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_security"
                            app:tint="#f44336" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AppKey"
                            android:layout_marginStart="5dp"
                            android:textColor="@color/black85"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_appkey_uia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="******"
                        android:textColor="@color/black75"
                        android:paddingVertical="15dp"
                        android:gravity="center"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_reset_key_userinfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="重置"
                            android:background="?android:selectableItemBackgroundBorderless"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="5dp"
                            android:textColor="@color/black85"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_copy_key_userinfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="复制"
                            android:background="?android:selectableItemBackgroundBorderless"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="5dp"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/black85"/>
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>